{
  "name": "headforge",
  "version": "1.2.0",
  "description": "Professional code header generator for multiple programming languages",
  "author": "Satoshiba",
  "license": "GPL-3.0",
  "homepage": "https://github.com/satoshiba/headforge#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/satoshiba/headforge.git"
  },
  "bugs": {
    "url": "https://github.com/satoshiba/headforge/issues"
  },
  "keywords": [
    "browser-extension",
    "code-header",
    "developer-tools",
    "documentation",
    "programming",
    "chrome-extension",
    "firefox-addon",
    "edge-extension"
  ],
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "dev:hot": "node scripts/dev-server.js hot",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js dev",
    "build:prod": "node scripts/build.js prod",
    "build:chrome": "npm run build && npm run package:chrome",
    "build:firefox": "npm run build && npm run package:firefox",
    "build:edge": "npm run build && npm run package:edge",
    "package:chrome": "node scripts/package.js chrome",
    "package:firefox": "node scripts/package.js firefox",
    "package:edge": "node scripts/package.js edge",
    "package:all": "node scripts/package.js all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration/",
    "test:e2e": "jest tests/e2e/",
    "test:performance": "jest tests/e2e/performance.test.ts",
    "test:accessibility": "jest tests/e2e/accessibility.test.ts",
    "test:cross-browser": "jest tests/integration/cross-browser.test.ts",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "format": "prettier --write src/**/*.{ts,js,css,html}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist packages",
    "prebuild": "npm run clean",
    "precommit": "npm run lint && npm run type-check && npm run test",
    "validate:manifest": "node scripts/validate-manifest.js",
    "generate:assets": "python scripts/generate-assets.py",
    "generate:diagrams": "python scripts/create-diagrams.py",
    "version:bump": "node scripts/version-bump.js",
    "store:assets": "node scripts/store-assets.js",
    "prepare": "husky install",
    "prepare-github": "node scripts/prepare-github.js",
    "release": "npm run build && node scripts/build-stores.js",
    "create-release": "node scripts/create-release.js",
    "validate-store": "node scripts/validate-store-requirements.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {},
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,html}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/manifest.json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}