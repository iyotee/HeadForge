#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint

# Run type checking
echo "🔧 Running TypeScript type check..."
npm run type-check

# Run tests
echo "🧪 Running tests..."
npm run test

# Run manifest validation
echo "📋 Validating manifest..."
npm run validate:manifest

echo "✅ Pre-commit checks passed!"
